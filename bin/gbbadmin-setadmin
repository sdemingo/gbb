#!/bin/bash

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi


DBPATH="./data/gbb.db"  # Must have absolute path to database

if [ $# -ne 2 ]
then
    echo -e "\tUso:   gbb-setadmin login yes|no"
    exit
fi

if [ $2 != "yes" ] && [ $2 != "no" ]
then
    echo -e "\tUso:   gbb-setadmin login yes|no"
    exit
fi

ADMIN=0
if [ $2 == "yes" ]
then
    ADMIN=1
fi

QUERY="UPDATE users SET isAdmin='$ADMIN' WHERE login='$1';"

sqlite3 $DBPATH "$QUERY" ".exit"

